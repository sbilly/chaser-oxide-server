# Server Configuration
RUST_LOG=info
CHASER_HOST=0.0.0.0
CHASER_PORT=50051

# Browser Configuration
CHASER_HEADLESS=true
CHASER_BROWSER_PATH=/usr/bin/chromium
CHASER_DEVTOOLS=false

# Security & Privacy
CHASER_ENABLE_STEALTH=true
CHASER_DISABLE_WEBGL=false
CHASER_DISABLE_WEBRTC=false

# Performance & Resources
CHASER_MAX_CONCURRENT_BROWSERS=5
CHASER_PAGE_TIMEOUT=30000
CHASER_NAVIGATION_TIMEOUT=30000

# Data Storage
CHASER_DATA_DIR=/app/data
CHASER_ENABLE_CACHE=true
CHASER_CACHE_SIZE=100MB

# Advanced Options
# CHASER_PROXY_URL=
# CHASER_USER_AGENT=
# CHASER_VIEWPORT_WIDTH=1920
# CHASER_VIEWPORT_HEIGHT=1080
